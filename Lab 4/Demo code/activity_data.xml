<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/selected_img_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="@dimen/DefaultTextSize"
            android:layout_marginBottom="15dp"
            android:text="@string/vader" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/vader_img"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:layout_weight="1"
                android:layout_marginRight="15sp"
                android:src="@drawable/vader" />
            <ImageView
                android:id="@+id/obiwan_img"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:layout_weight="1"
                android:layout_marginRight="15sp"
                android:src="@drawable/obiwan" />
            <ImageView
                android:id="@+id/yoda_img"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:layout_weight="1"
                android:src="@drawable/yoda" />
        </LinearLayout>

        <EditText
            android:id="@+id/data_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:textSize="@dimen/DefaultTextSize"
            android:hint="Enter text here" />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>